<h3>
    <b>Movies:</b>
</h3>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Options</th>
        </tr>
    </thead>
    {{#each movies}}
    <tr id="{{id}}">
        <td>
            <a href="/movies/{{id}}">
                <b>{{title}}</b>
            </a>
        </td>
        <td>
            <button class="btn btn-outline-error my-2 my-sm-0" onclick="removeFromList(&quot;{{@root._id}}&quot;,&quot;{{id}}&quot;)">Remove</button>
        </td>
    </tr>
    {{/each}}
</table>

<div class="container">
    <h3>Add movie:</h3>
    <form class="form-inline" action="/search" method="get">
        <div class="form-group">
            <input class="form-control mr-sm-2" align="right" type="text" required="required" placeholder="Movie name goes here..." aria-label="Search"
                name="name">
        </div>

        <div class="form-group">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </div>
    </form>
</div>

    <nav aria-label="Page navigation">

        <ul class="pagination justify-content-center">
            {{#if previous_page }}
            <li class="page-item">
                <a class="page-link" href='/favourites/{{id_path}}/page/{{previous_page}}'>Previous</a>
            </li>

            <li class="page-item">
                <a class="page-link" href='/favourites/{{id_path}}/page/{{previous_page}}'>{{previous_page}}</a>
            </li>

            {{/if}} {{#else}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
            {{/else}}

            <li class="page-item active">
                <a class="page-link" href="#">{{page}}</a>
            </li>

            {{#if next_page }}
            <li class="page-item">
                <a class="page-link" href='/favourites/{{id_path}}/page/{{next_page}}'>{{next_page}}</a>
            </li>

            <li class="page-item">
                <a class="page-link" href='/favourites/{{id_path}}/page/{{next_page}}'>Next</a>
            </li>

            {{/if}} {{#else}}
            <li class="page-item disable">
                <a class="page-link" href="#">Next</a>
            </li>
            {{/else}}




        </ul>
    </nav>
