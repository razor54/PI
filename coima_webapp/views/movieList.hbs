<div class="container-fluid">
    <ul>
        <li>Results:
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Rating</th>
                        {{#if username}}
                        <th scope="col">Add To favourites</th>
                        {{/if}}
                    </tr>
                </thead>

                {{#if username}} {{#each results}}
                <tr>
                    <td>
                        <a href='/movies/{{id}}'>
                            {{title}}
                        </a>
                    </td>
                    <td>{{vote_average}}</td>
                    <td>

                        <div class="container">
                            <button style="background-color:transparent" data-toggle="modal" data-target="#{{id}}" class="btn btn-outline-success my-2 my-sm-0"
                                type="submit">
                                <span style="font-size:100%;color:black;">&starf;</span>

                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="{{id}}" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            {{> addingList}}
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </td>
                </tr>
                {{/each}} {{else}} {{#each results}}
                <tr>
                    <td>
                        <a href='/movies/{{id}}'>
                            {{title}}
                        </a>
                    </td>
                    <td>{{vote_average}}</td>
                    {{/each}} {{/if}}
            </table>
        </li>
    </ul>
    <p></p>

    <nav aria-label="Page navigation">

        <ul class="pagination justify-content-center">
            {{#if previous_page }}
            <li class="page-item">
                <a class="page-link" href='/search/{{name}}/page/{{previous_page}}'>Previous</a>
            </li>

            <li class="page-item">
                <a class="page-link" href='/search/{{name}}/page/{{previous_page}}'>{{previous_page}}</a>
            </li>

            {{/if}} {{#else}}
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
            {{/else}}

            <li class="page-item active">
                <a class="page-link" href="#">{{page}}</a>
            </li>

            {{#if next_page }}
            <li class="page-item">
                <a class="page-link" href='/search/{{name}}/page/{{next_page}}'>{{next_page}}</a>
            </li>

            <li class="page-item">
                <a class="page-link" href='/search/{{name}}/page/{{next_page}}'>Next</a>
            </li>

            {{/if}} {{#else}}
            <li class="page-item disable">
                <a class="page-link" href="#">Next</a>
            </li>
            {{/else}}




        </ul>
    </nav>

</div>