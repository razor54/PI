 {{#if username}}
<h1>Loged in as {{username}} {{> logout}}</h1>
<p></p>
<a href="/user/profile"><h3 align ="left">Profile</h3></a>
<div style="width: 100%">
    <div style="width: 50%; float: left; display: inline-block;">
        <h1 align="left">Search movies</h1>
        <form class="form-inline" action="/search" method="get">
            <div class="form-group">
                <input class="form-control mr-sm-2" type="text" placeholder="Movie name goes here..." aria-label="Search"
                    name="name" required>
            </div>
            <div class="form-group">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </div>
        </form>
    </div>
    <div style="width: 50%; display: inline-block;">
        <h1 align="left">Create new list</h1>
        <form class="form-inline" action="/list" method="post">
            <div class="form-group">
                <input class="form-control mr-sm-2" type="text" required="required" placeholder="List Name" aria-label="Search" name="listName">
            </div>
            <div class="form-group">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>
<p></p>
<h1 align="left">Favourite Lists</h1>
<div class="row">
    <div class="col-6">
        {{> favourites}}
    </div>

</div>


{{else}}
<div class="container">
    <div class="row">
        <div class="col-6">
            {{> login}}
        </div>
    </div>
</div>

<div class="container">
    <div class="entry">
        <ul>
            <h1>HOMEPAGE</h1>

            <li>Welcome: {{welcomeMessage}}</li>

            <form class="form-inline" action="/search" method="get">
                <input class="form-control mr-sm-2" type="search" placeholder="Movie name goes here..." aria-label="Search" name="name" required>
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>

            <h2>Developers</h2>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Number</th>

                    </tr>
                </thead>
                {{#each workers}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{number}}</td>
                </tr>
                {{/each}}
            </table>
        </ul>
    </div>
</div>
{{/if}}